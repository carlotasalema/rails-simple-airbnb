<h1>All our flats - <%= Flat.count %></h1>
<br>
<div class="d-flex flex-wrap">
  <% @flats.each do |flat| %>
    <div class="card m-3" style="width: 18rem;">
      <div class="card-body">
        <div class="p-3">
          <h5 class="card-title"><%= flat.name %></h5>
          <p class="card-text"><%= flat.address %></p>
        </div>
        <div class="d-flex p-3">
          <p class="me-3"><i class="fa-solid fa-user"></i><%= flat.number_of_guests%></p>
          <p><i class="fa-solid fa-euro-sign"></i><%= flat.price_per_night %></p>
        </div>

      </div>
      <div class="d-flex justify-content-between btn-group btn-group-sm">
        <%= link_to "More info", flat_path(flat), class: "btn btn-primary" %>
        <%= link_to "Edit", edit_flat_path(flat), class: "btn btn-warning" %>
        <%= link_to "Delete", flat_path(flat), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger" %>
      </div>
    </div>
  <% end %>
</div>
